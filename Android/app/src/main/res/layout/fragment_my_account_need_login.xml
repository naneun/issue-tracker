<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_need_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인이 필요합니다"
            style="@style/Subtitle1.Black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_need_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_need_login_title"
            app:layout_constraintStart_toStartOf="@id/tv_need_login_title"
            app:layout_constraintEnd_toEndOf="@id/tv_need_login_title"
            android:layout_marginTop="20dp"
            android:text="로그인하러 가기"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>